<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jack.tapjam" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateSessionActivity" >
        </activity>
        <activity android:name=".PickInstrumentActivity" >
        </activity>
        <activity
            android:name=".DrumActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_drum"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".PianoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_piano"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".GuitarActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_guitar"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
